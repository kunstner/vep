FROM ensemblorg/ensembl-vep:release_106.1

MAINTAINER Axel KÃ¼nstner <axel.kuenstner@uni-luebeck.de>

# Change user to root
USER root

RUN apt-get update && apt-get install -y samtools

# Change user to vep
USER vep

RUN perl INSTALL.pl \
        --AUTO fcp \
        --ASSEMBLY GRCh37 \
        --PLUGINSDIR /opt/vep/.vep/Plugins/ \
        --CACHEDIR /opt/vep/.vep/ \
        --PLUGINS all \
        --SPECIES homo_sapiens && \
    vep -id rs699 \
      --assembly GRCh37 \
      --port 3337 \
      --cache \
      --nearest symbol \
      -o 'STDOUT' \
      --no_stats \
      > /dev/null
